{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "react/prop-types": "off"
    },
    "settings": {
        "import/resolver": {
            "alias": {
                "map": [
                    ["@/images", "./src/images"],
                    ["@/styles", "./src/styles"],
                    ["@/components", "./src/components"]
                ],
                "extensions": [".js"]
            }
        }
    }
}
